{
  "name": "build-tracker",
  "private": true,
  "author": "Paul Armstrong <paul@spaceyak.com>",
  "license": "MIT",
  "workspaces": ["packages/*"],
  "devDependencies": {
    "babel-eslint": "^8.2.2",
    "babel-jest": "^22.4.1",
    "eslint": "^4.18.1",
    "eslint-config-airbnb-base": "^12.1.0",
    "eslint-config-prettier": "^2.9.0",
    "eslint-plugin-flowtype": "^2.46.1",
    "eslint-plugin-import": "^2.9.0",
    "eslint-plugin-jest": "^21.12.2",
    "eslint-plugin-json": "^1.2.0",
    "eslint-plugin-jsx-a11y": "^6.0.3",
    "eslint-plugin-markdown": "^1.0.0-beta.6",
    "eslint-plugin-prettier": "^2.6.0",
    "eslint-plugin-promise": "^3.6.0",
    "eslint-plugin-react": "^7.7.0",
    "flow-bin": "^0.68.0",
    "flow-typed": "^2.4.0",
    "gh-pages": "^1.1.0",
    "husky": "^0.14.3",
    "jest": "^22.4.2",
    "jest-environment-jsdom": "^22.4.1",
    "lerna": "^3.4.3",
    "lint-staged": "^6.0.1",
    "prettier": "^1.10.2",
    "rimraf": "^2.6.2"
  },
  "scripts": {
    "prebuild": "rimraf packages/*/dist",
    "build": "lerna run build --stream --parallel",
    "flow": "flow",
    "flow:ci": "flow check",
    "lint": "eslint . --fix",
    "lint:ci": "eslint .",
    "postmerge": "./scripts/site",
    "precommit": "flow && lint-staged",
    "prerelease": "yarn build && yarn flow && yarn lint && yarn test ",
    "release": "./node_modules/.bin/lerna publish -- --access public",
    "test": "jest",
    "test:ci": "jest --ci"
  },
  "lint-staged": {
    "*.js": ["lint", "jest", "git add"],
    "*.{js,json,css,md}": ["prettier --write", "git add"]
  },
  "dependencies": {}
}
