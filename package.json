{
  "name": "build-tracker",
  "version": "1.0.0",
  "description": "Monorepo for @build-tracker/* packages",
  "repository": "git@github.com:paularmstrong/build-tracker.git",
  "author": "Paul Armstrong <paul@spaceyak.com>",
  "license": "MIT",
  "private": true,
  "workspaces": [
    "src/*"
  ],
  "scripts": {
    "lint": "yarn lint:cmd --fix",
    "lint:cmd": "eslint . --ext '.ts,.tsx,.js,.json,.md' --cache",
    "lint:ci": "yarn lint:cmd",
    "tsc": "tsc"
  },
  "husky": {
    "hooks": {
      "post-merge": "yarn",
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx,json,md}": [
      "yarn lint",
      "git add"
    ]
  },
  "devDependencies": {
    "@babel/core": "^7.2.2",
    "@typescript-eslint/eslint-plugin": "^1.3.0",
    "@typescript-eslint/parser": "^1.3.0",
    "eslint": "^5.13.0",
    "eslint-config-prettier": "^4.0.0",
    "eslint-plugin-json": "^1.4.0",
    "eslint-plugin-markdown": "^1.0.0",
    "eslint-plugin-prettier": "^3.0.1",
    "husky": "^1.3.1",
    "lerna": "^3.11.1",
    "lint-staged": "^8.1.3",
    "prettier": "^1.16.4",
    "typescript": "^3.3.3"
  }
}
