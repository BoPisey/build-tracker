{
  "name": "build-tracker",
  "private": true,
  "author": "Paul Armstrong <paul@spaceyak.com>",
  "license": "MIT",
  "workspaces": ["packages/*"],
  "devDependencies": {
    "flow-bin": "^0.64.0",
    "flow-typed": "^2.2.3",
    "husky": "^0.14.3",
    "lerna": "^2.8.0",
    "lint-staged": "^6.0.1",
    "prettier": "^1.10.2"
  },
  "scripts": {
    "build": "lerna run build --stream --parallel",
    "flow": "flow",
    "precommit": "flow && lint-staged",
    "release": "./node_modules/.bin/lerna run build --stream --parallel && ./node_modules/.bin/lerna publish"
  },
  "lint-staged": {
    "*.{js,json,css}": ["prettier --write", "git add"]
  }
}
